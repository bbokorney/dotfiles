# Git
alias gs='git status'
alias gd='git diff'
alias gap='git add -p'
alias gcom='git commit -m'
alias gp='git push'

# ls
if ls --help 2>&1 | grep -q -- --color; then
alias ls='ls --color=auto -F'
alias ll='ls --color=auto -Flah'
else
alias ls='ls -FG'
alias ll='ls -FGlah'
fi

# grep
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

alias pwc='pwd | pbcopy'

# Fly
alias fs='fly -t strat'
alias fs1='fly -t strat1'
alias fn='fly -t nu'

# Docker
alias dcom='docker-compose'
